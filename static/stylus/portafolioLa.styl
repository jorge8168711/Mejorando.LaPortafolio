@import 'normalize'
@font-face {
    font-family: 'portafolio';
    src:url('../fonts-portafolio.la/icomoon.eot?il6y0j');
    src:url('../fonts-portafolio.la/icomoon.eot?#iefixil6y0j') format('embedded-opentype'),
        url('../fonts-portafolio.la/icomoon.woff?il6y0j') format('woff'),
        url('../fonts-portafolio.la/icomoon.ttf?il6y0j') format('truetype'),
        url('../fonts-portafolio.la/icomoon.svg?il6y0j#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

color1 = #4183D7
color2 = lighten(#22A7F0, 20%)

//*********************
//*****UTILIDADES******
//*********************
    .u-ContainerDefault
        margin 1em auto
        width 90%

    .u-Title
        border-bottom 2px dashed color2
        color color2
        font-weight normal
        padding 0 0 .5em 0
        text-align center

    .u-HeaderIcon
        border solid 3px white
        border-radius 50%
        color white
        display inline-block
        font-family 'portafolio'
        font-size 50px
        font-weight normal
        margin 0 10px
        padding 15px
        text-decoration none
        transition all .2s ease
        vertical-align middle

        &:hover
          text-shadow 0 0 10px rgba(black, .3)

    .u-ProfileLink
        border-radius 3px
        color white
        display inline-block
        margin .5em
        padding .5em
        text-align center
        text-decoration none

        &:before
            display inline-block
            font-family 'portafolio'
            font-size 25px
            padding 0 .25em
            vertical-align middle

        &:hover
            opacity .9

//*********************
//********MENU*********
//*********************
    .Menu
        background color1
        height 3.75em
        left 0
        position fixed
        right 0
        text-align center
        top 0

    .Menu-list
        margin 0
        padding 0

    .Menu-item
        display inline-block
        margin 0 1.5em 0 0

    .Menu-link
        color white
        font-weight bold
        line-height 3.75em
        margin 0
        padding 1.4em .5em
        text-decoration none
        transition all .4s

        &:hover
            padding .25em
            border-bottom 2px solid white

//*********************
//*****HEADER******
//*********************
    .Header
        background color2
        height 350px
        margin 3.75em 0 0 0
        padding 1em 0
        position relative
        text-align center
        z-index 100

    .Header-imageContainer
        display inline-block
        margin 0 auto

    .Header-icon1:before
        content '\e600'

    .Header-image
        border solid 5px white
        border-radius 50%
        box-shadow 0 0 10px rgba(black, .3)
        display inline-block
        vertical-align middle
        width 220px

    .Header-icon2:before
        content '\e601'

    .Header-link
    .Header-name
        color white

    .Header-link
        font-size 2.2em
        font-weight bold
        text-decoration none
        transition all .2s ease

        &:hover
          text-shadow 0 0 10px rgba(black, .3)

    .Header-name
        font-size 1.5em
        font-weight 300
        margin 0

//*********************
//*******PERFIL********
//*********************
    .Profile
        text-align center

    .Profile-link1
        background #333
        border 1px solid #111
        box-shadow 1px 2px 0 #111

        &:before
            content '\f09b'

    .Profile-link2
        background #4eb9f3
        border 1px solid #1b9ac7
        box-shadow 1px 2px 0 #1b9ac7

        &:before
            content '\f099'

    .Profile-link3
        background #1e62a9
        border 1px solid #143f72
        box-shadow 1px 2px 0 #143f72

        &:before
            content '\f09a'

    .Profile-skills
        display inline-block
        margin 1em
        text-align left
        width 42%

        &:before
            color color2
            content '\f058'
            display block
            float left
            font-family 'portafolio'
            font-size 45px
            margin 0 10px

//*********************
//******TRABAJO********
//*********************
    .Work
        margin-top 2em
        text-align center

    .Work-item
        display inline-block

    .Work-imageContainer
        margin 1em
        padding 0

    .Work-image
        box-shadow 0 0 5px rgba(black, .5)
        cursor pointer
        height 200px
        transition all .3s
        width auto

        &:hover
            border-radius 50%

    .Work-description
        color gray
        font-size 1.1em
        font-style italic

//*********************
//******FOOTER********
//*********************
    .Footer
        background color1
        padding 2em
        text-align left

    .Footer-left
        display inline-block
        margin 0 2em 0 0
        text-align center
        vertical-align top
        width 32em

    .Footer-title
    .Footer-description
        color white
        text-align right

    .Footer-form
        display inline-block
        text-align left

    .Footer-formInput
    .Footer-textarea
        background white
        border none
        border-radius 5px
        display block
        margin 0 0 1em 0
        padding .5em

    .Footer-textarea
        resize none

    .Footer-button
        background white
        border none
        border-radius 3px
        color color1
        padding .5em

        &:hover
            box-shadow inset 0 0 5px rgba(black, .6)

@media screen and (max-width 600px)
    .u-ContainerDefault
        padding 2%
        width 96%

    .Profile-skills
        text-align left
        display block
        margin 1.5em 2%
        width 96%

@media screen and (max-width 500px)
    .u-HeaderIcon
        border solid 2px white
        font-size 30px
        margin 0 .1em
        padding 10px

    .u-ProfileLink
        display block
        margin .5em
        padding .5em .5em

    .Header
        height 230px

    .Header-image
        width 130px

    .Menu-item
        margin 0 .5em 0 0

@media screen and (max-width 830px)
    .Footer
        padding .5em
        text-align left

    .Footer-left
    .Footer-form
        display block
        margin 0
        padding 0 1%
        width 96%

    .Footer-title
    .Footer-description
        text-align left
        margin 0 0 .5em 0

    .Footer-formInput
    .Footer-textarea
        margin .5em auto
        width 96%
